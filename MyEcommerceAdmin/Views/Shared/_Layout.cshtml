<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title - STORE</title>
    <link href="~/Content/CSS/bootstrap.css" rel="stylesheet" />
    <link href="~/Fontawesome/css/all.css" rel="stylesheet" />
    <link href="~/Content/CSS/app.css" rel="stylesheet" />
    @RenderSection("Head", false)
</head>

<body>
    <div class="wrapper">
        @*Sidebar Navegation Start Here*@
        <nav id="sidebar" class="sidebar js-sidebar">
            <div class="sidebar-content js-simplebar">
                <a class="sidebar-brand" href="@Url.Action("Index", "Dashboard")">
                    <span class="align-middle">ADMIN PANEL</span>
                </a>

                <ul class="sidebar-nav">

                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Product")">
                            <i class="fa-solid fa-table"></i><span class="align-middle">Product</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Supplier")">
                            <i class="fa-regular fa-truck-field"></i><span class="align-middle">Supplier</span>
                        </a>
                    </li>

                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Customer")">
                            <i class="fa-light fa-person"></i><span class="align-middle">Customer</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("Index", "Employee")">
                            <i class="fa-solid fa-person-chalkboard"></i><span class="align-middle">Employee</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("Create", "Category")">
                            <i class="fa-regular fa-cabinet-filing"></i><span class="align-middle">Add Category</span>
                        </a>
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("Create", "SubCategory")">
                            <i class="fa-solid fa-diagram-subtask"></i><span class="align-middle">Add SubCategory</span>
                        </a>
                    </li>


        <li class="sidebar-header border-top mt-2 fs-4 text-muted">
                    </li>
                    <li class="sidebar-item">
                        <a class="sidebar-link fs-4" href="@Url.Action("Logout", "admin_Login")">
                            <i class="fa-regular fa-right-from-bracket"></i><span class="align-middle">LogOut</span>
                        </a>
                    </li>

                </ul>
            </div>
        </nav>

        <div class="main">
            @*Content Area Srart Here*@
            <main class="content">
                <div class="container-fluid p-0">
                    @RenderBody()
                </div>
            </main>
        </div>
    </div>
    @RenderSection("scripts", false)
    <script src="~/Content/JS/bootstrap.js"></script>
    <script src="~/Content/JS/app.js"></script>
</body>
</html>